<div class="banner-login" style="background-image: url(<%= asset_path 'login/sun-tornado.svg' %>);">
  <div class="container">
    <div class="row m-5">
      <div class="mx-auto" style="width: 400px;">
          <%= image_tag "logo_gnoumba_white.png", width: 380;%>
      </div>
    </div>
    <div class="container py-5 my-5">
    <div class=" row justify-content-end">
          <div class="col-7">
             <blockquote class="blockquote">
                <p class="mb-0">“Un bon arbre peut loger dix mille oiseaux.”</p>
                <footer class="blockquote-footer"><cite title="Source Title">Proverbe Birman</cite></footer>
              </blockquote>
          </div>
      <div class="col-12 col-md-8 col-lg-6 col-xl-5 text-left">
        <div class="fdb-box">
                 <h2>S'identifier</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,label: 'Email',
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password, label: 'Mot de passe',
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me,label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "S'identifier", class: "btn btn-gnoumba m-1" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
