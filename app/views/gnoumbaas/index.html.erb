<p>Gnoumbaas#index</p>
<div class="barre">
  <div class="container">
    <div class="row">
      <div class="col-9 mx-auto">
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Mamoudzou, Kounguou, Trévani..." />
            <button name="button" type="submit" class="btn btn-gnoumba">
              <i class="fas fa-search"></i> Rechercher
            </button>
          </div>
        <% end %>
      </div>
        <div class="col-9 mx-auto">
            <button type="button" class="btn btn-ghost"><i class="fas fa-arrows-alt-v"></i> Filtre par</button>
            <button type="button" class="btn btn-ghost"><i class="fas fa-coins"></i> Budget</button>
            <button type="button" class="btn btn-ghost"><i class="fas fa-calendar-alt"></i> Disponibilité</button>
            <button type="button" class="btn btn-ghost"><i class="fas fa-bed"></i> Type de bien</button>
            <button type="button" class="btn btn-ghost"><i class="fas fa-user-circle"></i> Type de profil</button>
        </div>
    </div>
  </div>
</div>

<!-- CSS GRID GENERATOR -->
<div class="parent">
    <div class="div1">
        <% @gnoumbaas.each do |gnoumbaa| %>
            <%= link_to  gnoumbaa_path(gnoumbaa) do %>
          <div class="card-trip">
            <%= image_tag "rooms/room.jpg", height: 300, width: 300 %>
            <div class="card-trip-infos">
              <div>
                <h2><%= gnoumbaa.user.name %></h2>
                <p class="text-muted"><%= gnoumbaa.propertytype %></p>
              </div>
                <h2 class="card-trip-pricing"><%= gnoumbaa.price.to_i %> €/mois</h2>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          </div>
            <% end %>
        <% end %>
    </div>

    <div class="div2">
        <%= image_tag "rooms/map-paris.png", id:'map' %>
    </div>
</div>
<!-- FIN -->
